@model EventApp.DTOs.CommentDto
@{
    Layout = User.IsInRole("Admin") ? "_AdminDashBoard" : "_AttendeeDashBoard";
}

<h3>Are you sure you want to delete this Comment?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Subject:
        </dt>
        <dd class="col-sm-10">
            @Model.Subject
        </dd>
        <dt class="col-sm-2">
            Event Name:
        </dt>
        <dd class="col-sm-10">
            @Model.EventName
        </dd>
        <dt class="col-sm-2">
            Content:
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
