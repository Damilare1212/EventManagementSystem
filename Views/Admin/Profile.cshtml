@{
    Layout = "_AdminDashBoard";
}
@model EventApp.DTOs.AdminDto



<dl class="row">
    <dt class="col-sm-2">
        FirstName:
    </dt>
    <dd class="col-sm-10">
        @Model.FirstName
    </dd>
    <dt class="col-sm-2">
        LastName:
    </dt>
    <dd class="col-sm-10">
        @Model.LastName

    </dd>
    <dt class="col-sm-2">
        Email:
    </dt>
    <dd class="col-sm-10">
        @Model.Email
    </dd>
    <dt class="col-sm-2">
        Phone Number:
    </dt>
    <dd class="col-sm-10">
        @Model.PhoneNumber
    </dd>


    <dt class="col-sm-2">
        Admin Photo:
    </dt>
    <dd class="col-sm-10">
        <img class="card-img" style="height:200px; width:200px" src="~/adminPhoto/@Model.AdminPhoto" />
        <a href="~/adminPhoto/" download="@Model.AdminPhoto"><input class="btn btn-outline-primary" type="button" value="Download Photo" /></a>
    </dd>

    <button style="background-color:aqua"><a asp-controller="Admin" asp-action="AdminPage">Admin Page</a> </button>
</dl>  