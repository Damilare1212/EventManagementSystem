@model IEnumerable<EventApp.DTOs.EventDto>
@{
    Layout = "_AttendeeDashBoard";
}

<div class="card-header" style="background-color: aqua;">
    <div class="card-title">
        <h1 class="text-center">Areas of Interest Upcoming Events</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>

            </th>
            <th>
                Details
            </th>
            <th>
                Book
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var events in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => events.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => events.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => events.Theme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => events.EventDate)
            </td>
            <td>             
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@events.Id">Details</a>
            </td>
            <td>
                <a asp-action="BookForEvent" asp-route-id="@events.Id">Book</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@events.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color:aqua"><a asp-controller="Attendee" asp-action="Profile">Profile</a> </button>

