@model EventApp.DTOs.EventDto
@{
    if (User.IsInRole("Admin"))
    {
        Layout = "_AdminDashBoard";
    }
    else if (User.IsInRole("Organizer"))
    {
        Layout = "_OrganizerDashBoard";
    }
    else
    {
        Layout = "_AttendeeDashBoard";
    }
}

<dl class="row">
    <dt class="col-sm-2">
        Title:
    </dt>
    <dd class="col-sm-10">
        @Model.Title
    </dd>
    <dt class="col-sm-2">
        Theme:
    </dt>
    <dd class="col-sm-10">
        @Model.Theme
    </dd>
    <dt class="col-sm-2">
        Event Date:
    </dt>
    <dd class="col-sm-10">
        @Model.EventDate
    </dd>
    <dt class="col-sm-2">
        Event Time:
    </dt>
    <dd class="col-sm-10">
        @Model.EventTime
    </dd>
    <dt class="col-sm-2">
        Venue:
    </dt>
    <dd class="col-sm-10">
        @Model.Venue
    </dd>
    <dt class="col-sm-2">
        Instructions:
    </dt>
    <dd class="col-sm-10">
        @Model.Instructions
    </dd>

</dl>
 else if (User.IsInRole("Organizer"))
{
<button style="background-color:darkblue;"><a asp-action="OrganizerAllEvents">Back to List</a></button>
}
<button style="background-color:darkblue;"><a asp-action="Index">Back to List</a></button>