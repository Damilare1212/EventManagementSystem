@model EventApp.DTOs.UpdateEventRequestModel
@using EventApp.Enums
@{
    Layout = "_AdminDashBoard";
}



<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Admin</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to Update the Event.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Theme" class="control-label"></label>
                            <input asp-for="Theme" class="form-control" />
                            <span asp-validation-for="Theme" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="EventDate" class="control-label"></label>
                            <input asp-for="EventDate" type="date" form-control" />
                            <span asp-validation-for="EventDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="EventTime" class="control-label"></label>
                            <input asp-for="EventTime" type="time" form-control" />
                            <span asp-validation-for="EventTime" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Venue" class="control-label"></label>
                            <input asp-for="Venue" class="form-control" />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                                <label class="control-label">Event Type</label>
                                <select asp-for="EventType" asp-items="@Html.GetEnumSelectList(typeof(EventType))" class="form-control" required>
                                    <option value="">--Select Event Type--</option>
                                </select>
                            </div>


                        </div>
                        <div>
                            <div class="form-row">
                                <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                                    <label class="control-label">Event Category </label>
                                    <select asp-for="CategoryIds" class="form-control" asp-items="ViewBag.Category" required>
                                        <option value="">--Select Category--</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                        <div>

                            <div class="form-group col-sm-6">
                                <label asp-for="Instructions" class="control-label"></label>
                                <input asp-for="Instructions" class="form-control" />
                                <span asp-validation-for="Instructions" class="text-danger"></span>
                            </div>

                        </div>


                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>

                </form>
            </div>
        </div>

    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
